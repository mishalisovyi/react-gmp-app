{
  "name": "react-gmp-app",
  "version": "1.0.0",
  "description": "Application for EPAM React Global Mentoring Program",
  "main": "index.js",
  "scripts": {
    "start": "tsc && tsc --build --clean && webpack serve --node-env development --config ./webpack/webpack.config.js --hot",
    "build:dev": "tsc && tsc --build --clean && webpack --node-env development --config ./webpack/webpack.config.js",
    "build:prod": "tsc && tsc --build --clean && webpack --node-env production --config ./webpack/webpack.config.js",
    "test": "jest",
    "test:develop": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:refresh-snapshots": "jest --updateSnapshot",
    "test:e2e": "cypress run",
    "test:e2e:develop": "cypress open",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx} cypress/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix --ext .tsx,.ts,.jsx,.js src/**/*.{js,jsx,ts,tsx} cypress/**/*.{js,jsx,ts,tsx}",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mishalisovyi/react-gmp-app.git"
  },
  "author": "Mykhailo Lisovyi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mishalisovyi/react-gmp-app/issues"
  },
  "homepage": "https://github.com/mishalisovyi/react-gmp-app#readme",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "formik": "^2.2.9",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux-thunk": "^2.4.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.5",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-test-renderer": "^18.0.0",
    "@types/redux-mock-store": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "cypress": "^10.3.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "mini-css-extract-plugin": "^2.6.0",
    "react-test-renderer": "^18.2.0",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^28.0.6",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  }
